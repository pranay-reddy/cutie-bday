{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(js|jsx|ts|tsx|css|map|json|ico|png|svg|txt|jpg|jpeg|gif))",
      "headers": { "cache-control": "max-age=0" },
      "dest": "/$1"
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
